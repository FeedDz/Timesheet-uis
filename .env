# Copy to .env and fill in
PORT=3000

# ERPNext base url, e.g. https://erp.example.com
ERP_URL=https://erp.example.com

# ERPNext API auth:
# Use either API_KEY and API_SECRET (recommended) or leave blank if using basic auth/token
ERP_API_KEY=
ERP_API_SECRET=

# Optional: override default doctype names / endpoints
ERP_EMPLOYEE_DOCTYPE=Employee
ERP_PROJECT_DOCTYPE=Project
ERP_ACTIVITY_DOCTYPE=Activity

# Project filter: the server will query Projects and exclude those with these statuses (comma separated)
ERP_PROJECT_EXCLUDE_STATUSES=Completed,Cancelled
